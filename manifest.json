{
    "manifest_version": 3,
    "name": "ADHD Task Reminders",
    "version": "1.0",
    "description": "A simple extension to remind you of your tasks.",
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "commands"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "icons": {
        "16": "icons/adhd-task-icon16.png",
        "48": "icons/adhd-task-icon48.png",
        "128": "icons/adhd-task-icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/adhd-task-icon16.png",
            "48": "icons/adhd-task-icon48.png",
            "128": "icons/adhd-task-icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "options_page": "options.html",
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "commands": {
        "open-popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Open the ADHD Task Reminders popup"
        }
    }
}