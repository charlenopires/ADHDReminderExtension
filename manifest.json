{
    "manifest_version": 3,
    "name": "ADHD Task Manager",
    "version": "2.0",
    "description": "A modern task management extension designed for people with ADHD. Organize your projects and daily tasks with a beautiful, distraction-free interface.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/reminder-icon16.png",
        "48": "icons/reminder-icon48.png",
        "128": "icons/reminder-icon128.png"
      }
    },
    "icons": {
      "16": "icons/reminder-icon16.png",
      "48": "icons/reminder-icon48.png",
      "128": "icons/reminder-icon128.png"
    },
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }