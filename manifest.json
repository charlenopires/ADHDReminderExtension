{
    "manifest_version": 3,
    "name": "ADHD Task Manager",
    "short_name": "ADHD Tasks",
    "version": "2.0.0",
    "description": "A modern, ADHD-friendly task management extension with a beautiful dark interface. Organize your current project and daily tasks across 3 days with visual timelines and privacy controls.",
    "author": "ADHD Task Manager Team",
    
    "permissions": [
      "storage"
    ],
    
    "host_permissions": [],
    
    "action": {
      "default_popup": "popup.html",
      "default_title": "ADHD Task Manager - Organize Your Tasks",
      "default_icon": {
        "16": "icons/reminder-icon16.png",
        "24": "icons/reminder-icon24.png",
        "32": "icons/reminder-icon32.png",
        "48": "icons/reminder-icon48.png",
        "128": "icons/reminder-icon128.png"
      }
    },
    
    "icons": {
      "16": "icons/reminder-icon16.png",
      "24": "icons/reminder-icon24.png",
      "32": "icons/reminder-icon32.png",
      "48": "icons/reminder-icon48.png",
      "96": "icons/reminder-icon96.png",
      "128": "icons/reminder-icon128.png",
      "256": "icons/reminder-icon256.png"
    },
    
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    },
    
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com;"
    },
    
    "web_accessible_resources": [
      {
        "resources": [
          "icons/*.png"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    
    "minimum_chrome_version": "88",
    
    "offline_enabled": true,
    
    "options_page": "options.html",
    
    "commands": {
      "open-popup": {
        "suggested_key": {
          "default": "Ctrl+Shift+T",
          "mac": "Command+Shift+T"
        },
        "description": "Open ADHD Task Manager popup"
      },
      "toggle-project-visibility": {
        "suggested_key": {
          "default": "Ctrl+Shift+P",
          "mac": "Command+Shift+P"
        },
        "description": "Toggle project visibility in new tab"
      }
    },
    
    "externally_connectable": {
      "matches": []
    },
    
    "incognito": "split"
  }